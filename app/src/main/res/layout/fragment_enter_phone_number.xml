<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ui.screens.EnterPhoneNumberFragment">

    <TextView
        android:id="@+id/register_text_view_phone_number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Введите номер"
        android:textSize="20dp"
        android:textStyle="bold"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:textColor="@color/black"/>

    <TextView
        android:id="@+id/register_text_view_info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="На него мы отправим код \n подтверждения"
        android:textColor="@color/black"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@+id/register_text_view_phone_number"
        app:layout_constraintStart_toStartOf="@+id/register_text_view_phone_number"
        app:layout_constraintTop_toBottomOf="@id/register_text_view_phone_number" />

    <EditText
        android:id="@+id/register_edt_text_enter_phone_number"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/register_text_view_info" />

    <Button
        android:id="@+id/register_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Войти"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/register_edt_text_enter_phone_number" />

</androidx.constraintlayout.widget.ConstraintLayout>