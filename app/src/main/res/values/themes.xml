<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Taxi_app" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">#0489FF</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="register_edt_text_enter_code">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">40sp</item>
        <item name="android:maxLines">1</item>
        <item name="android:textColorHint">@color/colorAccent</item>
        <item name="android:padding">16dp</item>
        <item name="android:layout_margin">16dp</item>
        <item name="android:inputType">phone</item>
    </style>

    <style name="underline_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:layout_marginStart">40dp</item>
        <item name="android:layout_marginEnd">20dp</item>
        <item name="android:background">@color/gray_400</item>
    </style>

    <style name="liner_layout_pay_method_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">20dp</item>
        <item name="android:orientation">horizontal</item>
    </style>

    <style name="text_view_pay_method_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingTop">10dp</item>
        <item name="android:paddingBottom">10dp</item>
        <item name="android:textSize">20sp</item>
        <item name="android:layout_marginStart">40dp</item>
        <item name="android:layout_marginEnd">20dp</item>
    </style>

    <style name="text_view_upper_text">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:layout_marginStart">20dp</item>
        <item name="android:layout_marginEnd">20dp</item>
        <item name="android:textSize">30sp</item>
    </style>

    <style name="card_view_style" parent="Theme.AppCompat.Light">
        <item name="cardCornerRadius">10dp</item>
        <item name="cardElevation">6dp</item>
        <item name="cardMaxElevation">6dp</item>
        <item name="contentPaddingBottom">14dp</item>
        <item name="contentPaddingTop">14dp</item>
        <item name="contentPaddingLeft">10dp</item>
        <item name="contentPaddingRight">10dp</item>
        <item name="android:layout_margin">20dp</item>
    </style>

    <style name="search_view_style">
        <item name="android:padding">15dp</item>
        <item name="background">@drawable/background_edt_address</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:inputType">text</item>
        <item name="android:backgroundTint">@android:color/transparent</item>
    </style>

</resources>